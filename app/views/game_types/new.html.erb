<h3 class="page-header">New Game Type</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game_type) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :min_num_players, "Minimum Number of Players" %>
      <%= f.text_field :min_num_players %>

      <%= f.label :how_to_play_link, "Link to Rules" %>
      <%= f.text_field :how_to_play_link %>

      <%= f.submit "Add New Game Type", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>