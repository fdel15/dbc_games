<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Edit Profile</h2>

    <%= form_for(@user) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, value: @user.username %><br />
      </div>

      <div class="field">
        <%= f.label :cohort %><br />
        <%= f.text_field :cohort, value: @user.cohort %>
      </div>

      <div class="field">
        <%= f.label :employer %>
        <%= f.text_field :employer, value: @user.employer %>
      </div>

      <div class="field">
        <%= f.label :job_title %><br />
        <%= f.text_field :job_title, value: @user.job_title %>
      </div>

      <div class="field">
        <%= f.label :quirk %><br />
        <%= f.text_field :quirk, value: @user.quirk %>
      </div>

      <div class="field">
        <%= f.label :advice_tweet, "Tweet Sized Piece of Advice" %><br />
        <%= f.text_field :advice_tweet, value: @user.advice_tweet %>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

  </div>
</div>
