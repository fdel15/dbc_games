<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@location) do |f| %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>

      <%= f.submit "Add New Location", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>