<h3 class="page-header">Create A New Game</h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <div class="form-helper">
        <%= f.label :game_type_id, "Game Type" %>
        <%= f.collection_select :game_type_id, @game_types, :id, :name %>
        <%= link_to '', new_game_type_path, class: 'glyphicon glyphicon-plus' %>

      <%= f.label :location_id, "Location " %>
      <%= f.collection_select :location_id, @locations, :id, :address_and_city %>
       <%= link_to '', new_location_path, class: 'glyphicon glyphicon-plus' %>
      </div>

      <div class="datetime">
        <%= f.label :date %><br>
        <%= f.datetime_select(:date, order: [:month, :day, :year], prompt: true, ampm: true, start_year: 2015, minute_step: 15)%> <br>

      </div>

      <%= f.label :description %>
      <%= f.text_area :description, value: "I am too lazy to write a description" %>

      <%= f.submit "Create New Game", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>